<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="#006400" tools:context=".About"
              android:weightSum="1">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="About"
            android:id="@+id/textView" android:layout_gravity="center_horizontal" android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text='This is a "playable" game of Mahjong by Heather Dykstra and Michael Williams for CSCI 4448.'
            android:id="@+id/textView2" android:layout_weight="0.08" android:layout_below="@+id/textView"
            android:layout_toRightOf="@+id/gallery" android:layout_marginTop="43dp"/>
    <ImageView
            android:id="@+id/image"
            android:layout_width="163dp"
            android:layout_height="241dp"
            android:src="@drawable/heather"
            android:layout_alignBottom="@+id/gallery" android:layout_alignParentLeft="true"/>
    <ImageView
            android:id="@+id/image"
            android:layout_width="163dp"
            android:layout_height="241dp"
            android:src="@drawable/michael"
            android:layout_below="@+id/textView2" android:layout_toRightOf="@+id/textView"/>
    <Gallery
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gallery" android:layout_below="@+id/image" android:layout_alignParentLeft="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Github Repo : https://github.com/slychika/M4hjong "
            android:id="@+id/textView3" android:layout_below="@+id/gallery" android:layout_centerHorizontal="true"
            android:layout_marginTop="44dp"/>

</RelativeLayout>